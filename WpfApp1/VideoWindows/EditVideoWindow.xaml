<Window x:Class="VideoRentalSystem.EditVideoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoRentalSystem"
        mc:Ignorable="d"
        Title="Edit Video Information" Height="143.075" Width="228.87">
    <Grid>
        <Label x:Name="label" Content="Title:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="109"/>
        <TextBox x:Name="VideoTitle_textBox" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="23" Margin="44,11,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="150"/>
        <Label x:Name="label_Copy" Content="Category:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="109"/>
        <ComboBox x:Name="VideoCategory_comboBox" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="74,44,0,0" VerticalAlignment="Top" Width="60" SelectedIndex="-1">
            <ComboBoxItem Name="vcd">VCD</ComboBoxItem>
            <ComboBoxItem Name="dvd">DVD</ComboBoxItem>
        </ComboBox>
        <Button x:Name="Submit_button" Content="Submit" HorizontalAlignment="Left" Margin="44,74,0,0" VerticalAlignment="Top" Width="129" Height="30" Click="Submit_button_Click"/>
    </Grid>
</Window>
