<Window x:Name="AddCustomerWindow" x:Class="VideoRentalSystem.AddCustomerWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoRentalSystem"
        mc:Ignorable="d"
        Title="Add Customer" Height="153" Width="293.5">
    <Grid>
        <Label x:Name="label" Content="Last Name:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label x:Name="label_Copy" Content="First Name:" HorizontalAlignment="Left" Margin="10,49,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Button x:Name="btn_Submit" Content="Submit" Margin="80.5,87,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Width="113.5" Click="ClickSubmit"/>
        <TextBox x:Name="textBox_lastName" HorizontalAlignment="Left" Height="23" Margin="113,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" />
        <TextBox x:Name="textBox_firstName" HorizontalAlignment="Left" Height="23" Margin="113,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>

    </Grid>
</Window>
